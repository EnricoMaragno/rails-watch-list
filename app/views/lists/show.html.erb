<div class="container mt-5">
  <h1><%= @list.name %></h1>
  <a class="btn btn-secondary mb-3" href="<%= lists_path %>">Back to lists</a>
  <a class="btn btn-primary mb-3" href="<%= new_list_bookmark_path(@list) %>">Add Movie to List</a>
  <a class="btn btn-warning mb-3" href="<%= edit_list_path(@list) %>">Edit List Name</a>

  <ul class="list-group mb-4">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= bookmark.movie.title %></strong>
          <p class="mb-1"><span class="text-muted">Comments:</span> <%= bookmark.comment %></p>
        </div>
        <%= button_to 'Remove', bookmark_path(bookmark), method: :delete, class: "btn btn-danger btn-sm" %>
      </li>
    <% end %>
  </ul>
</div>
