<div class="container mt-5">
  <h1 class="mb-4">My Movie Lists</h1>
  <a class="btn btn-primary mb-3" href="<%= new_list_path %>">Create a new list</a>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <div class="d-flex justify-content-between">
              <a href="<%= list_path(list) %>" class="btn btn-secondary">View List</a>
              <%= button_to 'Delete List', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
